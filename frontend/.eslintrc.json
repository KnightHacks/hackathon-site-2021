{
    "env": {
        "browser": true,
        "jest": true
    },

    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],

    "rules": {
        "react/destructuring-assignment": ["error", "always"],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true
            }
        }],
        "react/jsx-wrap-multilines": [2, {
            "return": "parens"
        }],
        "react/self-closing-comp": ["error"],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "no-unused-vars": "warn"
    },
    "settings": {
      "react": {
          "version": "detect"
      }  
    }
}
